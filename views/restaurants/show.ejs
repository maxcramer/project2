<div class="columns is-multilined">
    <div class="column is-one-quater">
      <a href="/restaurants/<%= restaurant.id %>">
        <img src=<%= restaurant.coverPic %> alt=<%= restaurant.name %> />
        <hr/>
      </a>
      <div class="columns">
        <div class="column is-one-half">
          <h2 class="title is-2"><%= restaurant.name %></h2> <br>
          <h2 class="subtitle is-4">Contact Number: <br> <%= restaurant.contactNumber %></h2>
          <h2 class="subtitle is-4">Contact Email: <br> <%= restaurant.contactEmail %></h2>
          <h2 class="subtitle is-4">Details: <br> <%= restaurant.details %></h2>
          <h2 class="subtitle is-4">Cuisine Types: <br> <%= restaurant.cuisine %></h2>
          <h2 class="subtitle is-4">Price Range: <br> <%= restaurant.priceRange %></h2>
          <h2 class="subtitle is-4">Address: <br> <%= restaurant.location %></h2>
        </div>
      </div>

      <%- include('../comments/index', { restaurant }) %>

      <% if (locals.isLoggedIn) { %>
        <hr />
        <div class="section">
          <div class="level">
            <div class="level-left">
              <a class="button is-warning" href="/restaurants/<%= restaurant.id %>/edit">Edit</a>
            </div>
            <div class="level-right">
              <form class="" action="/restaurants/<%= restaurant.id %>" method="POST">
                <button class="button is-danger">DELETE</button>
                <input type="hidden" name="_method" value="DELETE">
              </form>
            </div>
          </div>
        </div>
      <% } %>
    </div>
</div>
