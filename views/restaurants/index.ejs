<h1 class="title is-1">Eat Natural <img style="height: 75px; width: 75px; margin-top: 20px;"src="https://i.imgur.com/pSCIAnP.png"></h1>
<hr style="background-color: #C0FFD9">
<h2 class="subtitle is-3">Please choose from one of the hand-picked restaurants bellow</h2>


<div class="columns is-multiline">
      <% restaurants.forEach(restaurant => { %>
        <div class="column is-one-quarter">
          <a href="/restaurants/<%= restaurant.id %>">
            <img style="height: 150px; width: 200px;" src=<%= restaurant.coverPic %> alt=<%= restaurant.name %> />
            <h2 class="title is-3"><%= restaurant.name %></h2>
            <h3 style="font-size: 15px; padding-bottom: 9px;" class="subtitle is-4"><%= restaurant.location %></h3>
          </a>
        </div>
      <% }) %>
</div>
